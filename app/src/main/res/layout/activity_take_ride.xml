<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TakeRide">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:id="@+id/main"
        android:background="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/back"
            android:layout_marginTop="10dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/baseline_arrow_back_24"
            />
        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Book Ride"
            android:textColor="@color/white"
            android:textSize="22sp"

            />

    </LinearLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/takeRidePickDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        style="@style/edit_text_layout"
        app:hintTextColor="#000000"
        app:boxStrokeColor="#000000"
        app:layout_constraintTop_toBottomOf="@id/main"
        app:startIconTint="#000000"
        tools:ignore="MissingConstraints"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <com.google.android.material.textfield.TextInputEditText

            android:id="@+id/PickDate_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Pick Up Date"
            android:textSize="14sp"
            android:inputType="text"
            android:textColor="@color/black"
            android:drawableEnd="@drawable/baseline_calendar_month_24"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/takeRideDropDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        style="@style/edit_text_layout"
        app:hintTextColor="#000000"
        app:boxStrokeColor="#000000"
        app:layout_constraintTop_toBottomOf="@id/takeRidePickDate"
        app:startIconTint="#000000"
        tools:ignore="MissingConstraints"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <com.google.android.material.textfield.TextInputEditText

            android:id="@+id/DropDate_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Drop Date"
            android:textSize="14sp"
            android:inputType="text"
            android:textColor="@color/black"
            android:drawableEnd="@drawable/baseline_calendar_month_24"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/takeRidePickUpLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        style="@style/edit_text_layout"
        app:hintTextColor="#000000"
        app:boxStrokeColor="#000000"
        app:layout_constraintTop_toBottomOf="@id/takeRideDropDate"
        app:startIconTint="#000000"
        tools:ignore="MissingConstraints"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <com.google.android.material.textfield.TextInputEditText

            android:id="@+id/Pick_Location_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Pick Location"
            android:textSize="14sp"
            android:inputType="text"
            android:textColor="@color/black"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/takeRideDropLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        style="@style/edit_text_layout"
        app:hintTextColor="#000000"
        app:boxStrokeColor="#000000"
        app:layout_constraintTop_toBottomOf="@id/takeRidePickUpLocation"
        app:startIconTint="#000000"
        tools:ignore="MissingConstraints"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <com.google.android.material.textfield.TextInputEditText

            android:id="@+id/Drop_Location_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Drop Location"
            android:textSize="14sp"
            android:inputType="text"
            android:textColor="@color/black"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/takeRidePrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        style="@style/edit_text_layout"
        app:hintTextColor="#000000"
        app:boxStrokeColor="#000000"
        app:layout_constraintTop_toBottomOf="@id/takeRideDropLocation"
        app:startIconTint="#000000"
        tools:ignore="MissingConstraints"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <com.google.android.material.textfield.TextInputEditText

            android:id="@+id/price_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Price"
            android:textSize="14sp"
            android:inputType="text"
            android:textColor="@color/black"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/takeRideTotalPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        style="@style/edit_text_layout"
        app:hintTextColor="#000000"
        app:boxStrokeColor="#000000"
        app:layout_constraintTop_toBottomOf="@id/takeRidePrice"
        app:startIconTint="#000000"
        tools:ignore="MissingConstraints"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <com.google.android.material.textfield.TextInputEditText

            android:id="@+id/total_price_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Total Price"
            android:textSize="14sp"
            android:inputType="text"
            android:textColor="@color/black"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/takeRideBikeNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        style="@style/edit_text_layout"
        app:hintTextColor="#000000"
        app:boxStrokeColor="#000000"
        app:layout_constraintTop_toBottomOf="@id/takeRideTotalPrice"
        app:startIconTint="#000000"
        tools:ignore="MissingConstraints"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <com.google.android.material.textfield.TextInputEditText

            android:id="@+id/bike_number_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Bike Number"
            android:textSize="14sp"
            android:inputType="text"
            android:textColor="@color/black"
            />

    </com.google.android.material.textfield.TextInputLayout>
    <Button
        android:id="@+id/bokRide"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/takeRideBikeNumber"
        android:text="BOOK RIDE"
        android:fontFamily="serif"
        android:textStyle="bold"
        />

</androidx.constraintlayout.widget.ConstraintLayout>