<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CycleDetails">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:id="@+id/main"
        android:background="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/back"
            android:layout_marginTop="10dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/baseline_arrow_back_24"
            />
        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Cycle Details"
            android:textColor="@color/white"
            android:textSize="22sp"
            />

    </LinearLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/cycleUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        app:startIconDrawable="@drawable/baseline_person_24"
        style="@style/edit_text_layout"
        app:hintTextColor="#000000"
        app:boxStrokeColor="#000000"
        app:layout_constraintTop_toBottomOf="@id/main"
        app:startIconTint="#000000"
        tools:ignore="MissingConstraints"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <com.google.android.material.textfield.TextInputEditText

            android:id="@+id/user_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Bike Number"
            android:textSize="14sp"
            android:inputType="text"
            android:textColor="@color/black"
            />

    </com.google.android.material.textfield.TextInputLayout>
<LinearLayout
    android:id="@+id/cycleDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/cycleUser"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
    android:background="@drawable/cycledesc">

        <TextView

            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:text= "Have A savfe Drive \n.Do not Make any harm to Bicycle.."
            android:textSize="14sp"
            android:gravity="center"
            android:inputType="text"
            android:textColor="@color/black"
            />

</LinearLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/cyclePrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        app:startIconDrawable="@drawable/baseline_money"
        style="@style/edit_text_layout"
        app:hintTextColor="#000000"
        app:boxStrokeColor="#000000"
        app:layout_constraintTop_toBottomOf="@id/cycleDesc"
        app:startIconTint="#000000"
        tools:ignore="MissingConstraints"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <com.google.android.material.textfield.TextInputEditText

            android:id="@+id/price_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Price"
            android:textSize="14sp"
            android:inputType="text"
            android:textColor="@color/black"
            />

    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/locationUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"

        style="@style/edit_text_layout"
        app:hintTextColor="#000000"
        app:boxStrokeColor="#000000"
        app:layout_constraintTop_toBottomOf="@id/cyclePrice"
        app:startIconTint="#000000"
        tools:ignore="MissingConstraints"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        ♦♦♦<com.google.android.material.textfield.TextInputEditText
            android:id="@+id/Location_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Location"
            android:textSize="14sp"
            android:inputType="text"
            android:textColor="@color/black"
            android:drawableEnd="@drawable/baseline_location_on_24"
            />


    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/statusUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        app:startIconDrawable="@drawable/baseline_event_available_24"
        style="@style/edit_text_layout"
        app:hintTextColor="#000000"
        app:boxStrokeColor="#000000"
        app:layout_constraintTop_toBottomOf="@id/locationUser"
        app:startIconTint="#000000"
        tools:ignore="MissingConstraints"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <com.google.android.material.textfield.TextInputEditText

            android:id="@+id/status_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Status"
            android:textSize="14sp"
            android:inputType="text"
            android:textColor="@color/black"
            />

    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/stopUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        app:startIconDrawable="@drawable/baseline_stop_24"
        style="@style/edit_text_layout"
        app:hintTextColor="#000000"
        app:boxStrokeColor="#000000"
        app:layout_constraintTop_toBottomOf="@id/statusUser"
        app:startIconTint="#000000"
        tools:ignore="MissingConstraints"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <com.google.android.material.textfield.TextInputEditText

            android:id="@+id/stop_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Stop"
            android:textSize="14sp"
            android:inputType="text"
            android:textColor="@color/black"
            />

    </com.google.android.material.textfield.TextInputLayout>
    <Button
        android:id="@+id/TakeRide"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/stopUser"
        android:text="TAKE RIDE"
        android:fontFamily="serif"
        android:textStyle="bold"
        />
</androidx.constraintlayout.widget.ConstraintLayout>